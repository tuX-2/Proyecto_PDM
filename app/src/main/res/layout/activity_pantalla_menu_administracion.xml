<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantalla_Menu_administracion">

    <!-- Encabezado azul con logo y título -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#2B3D8D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_umar" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora de precios de venta de Queso"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- Título "Administrar" -->
    <TextView
        android:id="@+id/txt_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrar"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <!-- Botón 1: Materia Prima -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_materia_prima"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/materia_prima"
        android:backgroundTint="#E0E0E0"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/txt_admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Botón 2: Materiales -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_materiales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Materiales"
        android:backgroundTint="#E0E0E0"
        android:icon="@drawable/ic_materiales"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_materia_prima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Botón 3: Mano de Obra -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mano_obra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mano de Obra"
        android:backgroundTint="#E0E0E0"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_materiales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Botón 4: Enviar -->

    <!-- Footer -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_costos_gastos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#E0E0E0"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        android:padding="12dp"
        android:text="Costos/Gastos"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_mano_obra" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2B3D8D"
        android:gravity="center"
        android:padding="8dp"
        android:text="©UMAR Todos los derechos reservados"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
